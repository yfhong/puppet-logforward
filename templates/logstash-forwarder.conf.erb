{
  "network": {
    "servers": [ "<%= log_server_host %>:<%= log_server_port %>" ],
    "ssl certificate": "<%= ssl_cert_path %>",
    "ssl key": "<%= ssl_key_path %>",
    "ssl ca": "<%= ssl_cert_path %>",
    "timeout": 15
  },
  "files": [
    {
      "paths": [
        "/var/log/messages"
      ],
      "fields": { "type": "syslog" }
    },
    {
      "paths": [
        "/var/log/audit/audit.log"
      ],
      "fields": { "type": "audit" }
    },
    {
      "paths": [
        "/var/log/secure"
      ],
      "fields": { "type": "secure" }
    }
    <%- if aggregated_logs -%>
    <%- aggregated_logs.each do |entry| -%>
    ,
    {
      "paths": [
      "<%= entry['path'] %>"
      ],
      "fields": { "type": "<%= entry['type'] %>" }
    }
    <%- end -%>
    <%- end -%>
  ]
}
